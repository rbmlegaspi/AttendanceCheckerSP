<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/compare1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/wrongz" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/compare1"
        android:layout_alignRight="@+id/compare1"
        android:layout_below="@+id/compare1"
        android:text="Ok" />

    <Button
        android:id="@+id/nopls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ok"
        android:layout_alignBottom="@+id/ok"
        android:layout_alignRight="@+id/compare2"
        android:layout_toRightOf="@+id/compare1"
        android:text="No" />

    <ImageView
        android:id="@+id/compare2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/nopls"
        android:layout_toRightOf="@+id/compare1"
        android:src="@drawable/wrongz" />

</RelativeLayout>
